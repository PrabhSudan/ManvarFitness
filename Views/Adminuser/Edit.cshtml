@model ManvarFitness.Entity.AdminUser

@{
    ViewData["Title"] = "Update User";
}

<h1>Update User</h1>

<form method="post" asp-action="Edit" asp-controller="AdminUser">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div class="mb-3" style="max-width: 400px;">
        <label>Email/Username</label>
        <input asp-for="EmailUsername" class="form-control" />
    </div>

    <div class="mb-3" style="max-width: 400px;">
        <label>Password</label>
        <input asp-for="Password" class="form-control" />
    </div>

    <div class="mb-3 row" style="max-width: 400px;">
        <div class="col-4">
            <label>Country Code</label>
            <select asp-for="CountryCode" class="form-control">
                <option value="+1">+1 (USA)</option>
                <option value="+91">+91 (India)</option>
                <option value="+44">+44 (UK)</option>
                <option value="+61">+61 (Australia)</option>
                <option value="+81">+81 (Japan)</option>
            </select>
        </div>

        <div class="col-8">
            <label>Mobile</label>
            <input asp-for="Mobile" class="form-control" />
        </div>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="AdminUser">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
