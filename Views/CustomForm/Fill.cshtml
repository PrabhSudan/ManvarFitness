@model ManvarFitness.Entity.CustomForm

<h2 class="fw-semibold mb-3">Fill Form</h2>

<div class="card shadow-sm p-4">
    <form asp-action="Submit" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" name="CustomFormId" value="@Model.CustomFormId" />

        <!-- Concern Info -->
        <div class="mb-3">
            <label class="fw-bold">Concern:</label>
            <span>@Model.Concern?.Name</span>
        </div>

        <div class="mb-3">
            <label class="fw-bold">Sub Concern:</label>
            <span>@Model.SubConcern?.Name</span>
        </div>

        <hr />

        <!-- Default Fields -->
        @if (Model.IncludeName)
        {
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input name="Name" class="form-control" required />
            </div>
        }

        @if (Model.IncludeAge)
        {
            <div class="mb-3">
                <label class="form-label">Age</label>
                <input name="Age" type="number" class="form-control" />
            </div>
        }

        @if (Model.IncludeGender)
        {
            <div class="mb-3">
                <label class="form-label">Gender</label>
                <select name="Gender" class="form-select">
                    <option value="">Select Gender</option>
                    <option>Male</option>
                    <option>Female</option>
                    <option>Other</option>
                </select>
            </div>
        }

        @if (Model.IncludeHeight)
        {
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Height (Feet)</label>
                    <input name="HeightFeet" type="number" class="form-control" min="0" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Height (Inches)</label>
                    <input name="HeightInch" type="number" class="form-control" min="0" max="11" />
                </div>
            </div>
        }

        @if (Model.IncludeWeight)
        {
            <div class="mb-3">
                <label class="form-label">Weight (Kg)</label>
                <input name="Weight" type="number" step="0.01" class="form-control" />
            </div>
        }

        <!-- Custom Fields -->
        @if (Model.CustomFields != null && Model.CustomFields.Any())
        {
            <hr />
            <h5>Additional Information</h5>

            @foreach (var field in Model.CustomFields)
            {
                <div class="mb-3">
                    <label class="form-label">@field.Label</label>

                    @if (field.FieldType == "text")
                    {
                        <input name="CustomFieldValues[@field.CustomFieldId]"
                               class="form-control"
                               @(field.IsRequired ? "required" : "") />
                    }
                    else if (field.FieldType == "number")
                    {
                        <input type="number"
                               name="CustomFieldValues[@field.CustomFieldId]"
                               class="form-control"
                               @(field.IsRequired ? "required" : "") />
                    }
                    else
                    {
                        <input name="CustomFieldValues[@field.CustomFieldId]"
                               class="form-control" />
                    }
                </div>
            }
        }

        <button type="submit" class="btn btn-primary mt-3 px-4">
            Submit
        </button>

    </form>
</div>