@model ManvarFitness.Models.ResultModel

@{
    ViewData["Title"] = "Create Result";
}

<h1 class="fw-semibold mb-3"
    style="display:inline-block;color:#333;
           padding-bottom:4px;
           border-bottom:3px solid #FF7F11;">
    Add New Result
</h1>

<div class="container-fluid px-4">

    <form asp-action="Create"
          method="post"
          enctype="multipart/form-data">

        <div class="row">

            <div class="col-md-6 mb-3">
                <label asp-for="UserId" class="form-label fw-semibold"></label>
                <select asp-for="UserId"
                        asp-items="ViewBag.Users"
                        class="form-select">
                    <option value="">-- Select User --</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <!-- SUB CONCERN -->
            <div class="col-md-6 mb-3">
                <label asp-for="SubConcernId" class="form-label fw-semibold"></label>
                <select asp-for="SubConcernId"
                        asp-items="ViewBag.SubConcerns"
                        class="form-select">
                    <option value="">-- Select Sub Concern --</option>
                </select>
                <span asp-validation-for="SubConcernId"
                      class="text-danger"></span>
            </div>

            <!-- DESCRIPTION -->
            <div class="col-md-6 mb-3">
                <label asp-for="Description"
                       class="form-label fw-semibold"></label>
                <textarea asp-for="Description"
                          class="form-control"
                          rows="3"></textarea>
                <span asp-validation-for="Description"
                      class="text-danger"></span>
            </div>

            <!-- BEFORE IMAGES -->
            <div class="col-md-6 mb-3">
                <label asp-for="BeforeImageFile"
                       class="form-label fw-semibold"></label>
                <input asp-for="BeforeImageFile"
                       type="file"
                       class="form-control"
                       multiple />
            </div>

            <!-- AFTER IMAGES -->
            <div class="col-md-6 mb-3">
                <label asp-for="AfterImageFile"
                       class="form-label fw-semibold"></label>
                <input asp-for="AfterImageFile"
                       type="file"
                       class="form-control"
                       multiple />
            </div>

            <!-- VIDEOS -->
            @* <div class="col-md-6 mb-3">
                <label asp-for="Videos"
                       class="form-label fw-semibold"></label>
                <input asp-for="Videos"
                       type="file"
                       class="form-control"
                       multiple />
            </div> *@

        </div>

        <div class="mt-3">
            <button type="submit"
                    class="btn btn-success px-4">
                Save
            </button>

            <a asp-action="Index"
               class="btn btn-secondary px-4">
                Cancel
            </a>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}