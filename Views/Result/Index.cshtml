@model IEnumerable<dynamic>

<h1 class="fw-semibold mb-0" style="display: inline-block; color: #333; padding-bottom: 4px; border-bottom: 3px solid #FF7F11; border-radius: 2px;">Results</h1>

<div class="container-fluid px-4">

    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <a asp-controller="Result"
           asp-action="Create"
           class="btn btn-success px-4 py-2 fw-semibold">
            Add New Result
        </a>
    </div>

    <!-- Search & Filters -->
    <div class="row mb-3 g-2">
        <div class="col-lg-3 col-md-4">
            <input type="text" id="searchPlan" class="form-control w-100" placeholder="Search Result..."/>
        </div>
    </div>

    <!-- TABLE -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered w-100 align-middle">
            <thead class="table-light">
                <tr>
                    <th class="d-none d-md-table-cell" style="width:60px;">ID</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th class="d-none d-md-table-cell">Date</th>
                    <th>Results</th>
                    <th style="width:200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="d-none d-md-table-cell">@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Category</td>
                        <td class="d-none d-md-table-cell">@user.Date</td>
                        <td>@if (!string.IsNullOrEmpty(user.Result) && user.Result != "null")
                            {
                                <a href=""@user.Result" target="_blank">View</a>
                            }
                            else
                            {
                                <span>Not uploaded</span>
                            }
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a class="btn btn-warning btn-sm" asp-action="Details" asp-route-id="@user.Id">Details</a>
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                                <a class="btn btn-warning btn-sm" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    document.getElementById("searchPlan").addEventListener("keyup", function () {
        const searchValue = this.value.toLowerCase();
        const rows = document.querySelectorAll("table tbody tr");

        rows.forEach(row => {
            const rowText = row.innerText.toLowerCase();
            row.style.display = rowText.includes(searchValue) ? "" : "none";
        });
    });
</script>
