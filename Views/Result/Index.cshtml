@model IEnumerable<ManvarFitness.Entity.ResultEntity>
@using System.Text.Json
<style>
    /* OFF state */
    .form-check-input {
        background-color: #ccc; /* gray when OFF */
        border-radius: 1rem; /* keep default Bootstrap rounded */
        transition: background-color 0.4s;
    }

        /* ON state */
        .form-check-input:checked {
            background-color: #FF7F11; /* orange when ON */
        }

    /* Make carousel arrows BLACK */
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        filter: invert(1);
    }
</style>
<h1 class="fw-semibold mb-0" style="display: inline-block; color: #333; padding-bottom: 4px; border-bottom: 3px solid #FF7F11; border-radius: 2px;">Results</h1>

<div class="container-fluid px-4">

    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <a asp-controller="Result"
           asp-action="Create"
           class="btn btn-success px-4 py-2 fw-semibold">
            Add New Result
        </a>
    </div>

    <!-- Search & Filters -->
    <div class="row mb-3 g-2">
        <div class="col-lg-3 col-md-4">
            <input type="text" id="searchPlan" class="form-control w-100" placeholder="Search Result..."/>
        </div>
    </div>

    <!-- TABLE -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered w-100 align-middle text-center">
            <thead class="table-light">
                <tr>
                    <th style="width:15%">UserName</th>
                    <th class="text-center align-middle" style="width:20%">User</th>
                    <th style="width:20%">Concern</th>
                    <th class="text-center align-middle" style="width:20%">Results</th>
                    <th style="width:10%">Description</th>
                    <th class="text-center align-middle" style="width:15%">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model)
                {
                    var beforeImages = string.IsNullOrEmpty(result.BeforeImage)
                    ? new List<string>()
                    : JsonSerializer.Deserialize<List<string>>(result.BeforeImage);

                    var afterImages = string.IsNullOrEmpty(result.AfterImage)
                    ? new List<string>()
                    : JsonSerializer.Deserialize<List<string>>(result.AfterImage);

                    var videos = string.IsNullOrEmpty(result.Video)
                    ? new List<string>()
                    : JsonSerializer.Deserialize<List<string>>(result.Video);

                    <tr>
                        <td>
                            @(string.IsNullOrEmpty(result.User?.Name)
                                                    ? "Not Updated"
                                                    : result.User.Name)
                        </td>
                        <td>
                            @if (result.User != null)
                            {
                                <span class="fw-semibold">(@result.User.CountryCode) @result.User.Mobile</span>
                            }
                            else
                            {
                                <span class="text-muted ">Not Assigned</span>
                            }
                        <td>
                            @if (result.SubConcern != null && result.ConcernCategory != null)
                            {
                                <span class="fw-semibold">
                                    (@result.SubConcern.Name) @result.ConcernCategory.Name
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">Not Assigned</span>
                            }
                        </td>

                        <td style="width:240px">

                            @* BEFORE IMAGES *@
                            @if (beforeImages?.Count > 0)
                            {
                                var beforeId = "beforeCarousel_" + result.ResultId;

                                <div class="mb-2">
                                    <small class="fw-bold text-warning">Before</small>

                                    <div id="@beforeId" class="carousel slide">
                                        <div class="carousel-inner">

                                            @for (int i = 0; i < beforeImages.Count; i++)
                                            {
                                                <div class="carousel-item @(i == 0 ? "active" : "") text-center">
                                                    <img src="@beforeImages[i]"
                                                         class="rounded img-fluid"
                                                         style="max-height:150px;">
                                                </div>
                                            }

                                        </div>

                                        @if (beforeImages.Count > 1)
                                        {
                                            <button class="carousel-control-prev"
                                                    type="button"
                                                    data-bs-target="#@beforeId"
                                                    data-bs-slide="prev">
                                                <span class="carousel-control-prev-icon"></span>
                                            </button>

                                            <button class="carousel-control-next"
                                                    type="button"
                                                    data-bs-target="#@beforeId"
                                                    data-bs-slide="next">
                                                <span class="carousel-control-next-icon"></span>
                                            </button>
                                        }
                                    </div>
                                </div>
                            }

                            @* AFTER IMAGES *@
                            @if (afterImages?.Count > 0)
                            {
                                var afterId = "afterCarousel_" + result.ResultId;

                                <div>
                                    <small class="fw-bold text-success">After</small>

                                    <div id="@afterId" class="carousel slide">
                                        <div class="carousel-inner">

                                            @for (int i = 0; i < afterImages.Count; i++)
                                            {
                                                <div class="carousel-item @(i == 0 ? "active" : "") text-center">
                                                    <img src="@afterImages[i]"
                                                         class="rounded img-fluid"
                                                         style="max-height:150px;">
                                                </div>
                                            }

                                        </div>

                                        @if (afterImages.Count > 1)
                                        {
                                            <button class="carousel-control-prev"
                                                    type="button"
                                                    data-bs-target="#@afterId"
                                                    data-bs-slide="prev">
                                                <span class="carousel-control-prev-icon"></span>
                                            </button>

                                            <button class="carousel-control-next"
                                                    type="button"
                                                    data-bs-target="#@afterId"
                                                    data-bs-slide="next">
                                                <span class="carousel-control-next-icon"></span>
                                            </button>
                                        }
                                    </div>
                                </div>
                            }

                            @if ((beforeImages?.Count ?? 0) == 0 &&
                                                    (afterImages?.Count ?? 0) == 0)
                            {
                                <span class="text-muted">No Media</span>
                            }

                        </td>

                        <td>@result.Description</td>
                        <td>
                            <div class="form-check form-switch m-0">
                                <input class="form-check-input"
                                       type="checkbox"
                                       role="switch"
                                       data-roleid="@result.ResultId"
                                       id="switchRole@role.Id"
                                       @(result.IsActive ? "checked" : "") />
                                <label class="form-check-label" for="switchRole@role.Id"></label>

                                <a asp-action="Edit" asp-route-id="@result.ResultId" class="btn btn-sm "
                                   title="Edit">
                                    <i class="bi bi-pencil-fill text-warning"></i>
                                </a>
                                <button type="button" class="btn btn-sm" style="color:darkorange;"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal"
                                        onclick="setDeleteId(@result.ResultId)">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Cancel
                </button>
                <button type="button" class="btn btn-danger" onclick="deleteRole()">
                    Delete
                </button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        // SEARCH
        document.getElementById("searchPlan")
            .addEventListener("keyup", function () {
                const value = this.value.toLowerCase();
                document.querySelectorAll("tbody tr")
                    .forEach(row => {
                        row.style.display =
                            row.innerText.toLowerCase().includes(value)
                                ? ""
                                : "none";
                    });
            });

        // DELETE
        let deleteId = 0;

        function setDeleteId(id) {
            deleteId = id;
        }

        function deleteResult() {
            fetch(`/Result/Delete/${deleteId}`, {
                method: "POST"
            })
            .then(res => {
                if (res.ok) location.reload();
                else alert("Error deleting record");
            });
        }
    </script>
}

