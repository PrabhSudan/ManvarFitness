@model dynamic

<h1>User Details</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">User ID: @Model.Id</h5>

        <p class="card-text">
            <strong>Name:</strong> @Model.Name
        </p>

        <p class="card-text">
            <strong>Email:</strong> @Model.Email
        </p>

        <p class="card-text">
            <strong>Phone:</strong> @Model.Phone
        </p>

        <a class="btn btn-primary" href="/User/Index">Back</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered w-100 align-middle">
            <thead class="table-light">
                <tr>
                    <th>Profile</th>
                    <th>Diet Plan</th>
                    <th>Results</th>
                    <th>Workouts</th>
                    <th>Payments</th>
                </tr>
            </thead>
            
        </table>
    </div>
</div>
