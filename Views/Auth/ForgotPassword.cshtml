@{
    Layout = null;
    ViewData["Title"] = "ForgotPassword";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f5f6fa;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            width: 380px;
            background: #fff;
            border-radius: 12px;
            padding: 32px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.08);
        }

        .brand {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 8px;
            margin-bottom: 24px;
            font-size: 22px;
            font-weight: 600;
        }

            .brand span {
                color: #7c4dff;
            }

        .form-control:focus {
            border-color: #FF7A00 !important;
            box-shadow: 0 0 0 0.15rem rgba(255, 179, 0, 0.25) !important;
        }

        .form-floating label {
            color: #FF7A00;
        }

        .btn-login {
            background-color: #FF7A00;
            border: none;
            color: #fff;
            font-weight: 600;
            padding: 12px;
            border-radius: 8px;
        }

            .btn-login:hover {
                background-color: #ffa000;
            }

        .forgot-link {
            text-align: center;
            margin: 12px 0 20px;
        }

            .forgot-link a {
                color: #FF7A00;
                text-decoration: none;
                font-size: 14px;
            }


    </style>
</head>

<body>
    <div class="login-card">
        <div class="brand">
            <img src="~/img/IMG_5797.JPG (1).jpeg" alt="Logo" style="height:70px; width:auto;" />
            Manvar Fitness
        </div>

        <form asp-controller="Auth" asp-action="ForgotPassword" method="post">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-warning text-center">
                    @ViewBag.Error
                </div>
            }

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="emailUsername" name="emailUsername" placeholder="Email or Username" required>
                <label for="emailUsername">Email or Username</label>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input type="password" class="form-control" id="password" name="Password" placeholder="Password" required>
                <label for="password">New Password</label>
                <span class="position-absolute top-50 end-0 translate-middle-y pe-3 cursor-pointer" onclick="togglePassword('password','eyeIcon1')">
                </span>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword" placeholder="Confirm Password" required>
                <label for="confirmPassword">Confirm Password</label>
                <span class="position-absolute top-50 end-0 translate-middle-y pe-3 cursor-pointer" onclick="togglePassword('confirmPassword','eyeIcon')">
                </span>
            </div>

            <button type="submit" class="btn btn-login w-100">Reset Password</button>
            <div class="forgot-link">
                <a asp-controller="Auth" asp-action="login">Back</a>
            </div>
        </form>
    </div>

    <script>
                function togglePassword(inputId, iconId) {
            var password = document.getElementById(inputId);
            var icon = document.getElementById(iconId);

            if (password.type === "password") {
                password.type = "text";
                icon.classList.remove('ri-eye-off-line');
                icon.classList.add('ri-eye-line');
            } else {
                password.type = "password";
                icon.classList.remove('ri-eye-line');
                icon.classList.add('ri-eye-off-line');
            }
        }

    </script>
</body>
</html>
