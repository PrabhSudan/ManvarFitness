@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f5f6fa;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            width : 100%
            max-width: 420px;
            background: #fff;
            border-radius: 12px;
            padding: 32px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.08);
        }

        .brand {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 8px;
            margin-bottom: 24px;
            font-size: 22px;
            font-weight: 600;
        }

        .brand span {
            color: #7c4dff;
        }

        .form-control:focus {
            border-color: #FF7A00 !important;
            box-shadow: 0 0 0 0.15rem rgba(255, 179, 0, 0.25) !important;
        }

        .form-floating label {
            color: #FF7A00;
        }

        .btn-login {
            background-color: #FF7A00;
            border: none;
            color: #fff;
            font-weight: 600;
            padding: 12px;
            border-radius: 8px;
        }

        .btn-login:hover {
                background-color: #FF7A00;
        }

        .forgot-link {
            text-align: center;
            margin: 12px 0 20px;
        }

        .forgot-link a {
                color: #FF7A00;
            text-decoration: none;
            font-size: 14px;
        }
        /* ======================= MOBILE ADJUSTMENTS ======================= */
        @@media (max-width: 576px) {
            .login-card

        {
            padding: 24px;
        }

        .brand {
            font-size: 20px;
            flex-direction: column;
        }

            .brand img {
                height: 60px;
            }

        .btn-login {
            padding: 10px;
            font-size: 1rem;
        }

        }</style>
</head>

<body>
    <div class="login-card">
        <div class="brand">
            <img src="~/img/IMG_5797.JPG (1).jpeg" alt="Logo" style="height:70px; width:auto;" />
            Manwar Fitness
        </div>

        <form asp-controller="Auth" asp-action="Login" method="post" autocomplete="off">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-warning text-center">
                    @ViewBag.Error
                </div>
            }
            <!-- Edge autofill blocker -->
            <input type="text" name="fakeusernameremembered" style="display:none">
            <input type="password" name="fakepasswordremembered" style="display:none">

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="email" name="emailUsername"  placeholder="Email or Username" autocomplete="email" required>
                <label for="emailUsername">Email or Username</label>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input type="password" class="form-control" id="password" name="Password" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7" ; autocomplete="password" required>
                <label for="password">Password</label>
                <span class="position-absolute top-50 end-0 translate-middle-y pe-3 cursor-pointer" onclick="togglePassword('password','eyeIcon1')">
                </span>
            </div>

            <div class="forgot-link">
                <a asp-controller="Auth" asp-action="ForgotPassword">Forgot Password?</a>
            </div>


            <button type="submit" class="btn btn-login w-100">Login</button>
        </form>
    </div>

    <script>
                function togglePassword(inputId, iconId) {
            var password = document.getElementById(inputId);
            var icon = document.getElementById(iconId);

            if (password.type === "password") {
                password.type = "text";
                icon.classList.remove('ri-eye-off-line');
                icon.classList.add('ri-eye-line');
            } else {
                password.type = "password";
                icon.classList.remove('ri-eye-line');
                icon.classList.add('ri-eye-off-line');
            }
        }

    </script>
</body>
</html>
